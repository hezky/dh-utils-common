{
"env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "classes": true
    },
    "ecmaVersion": 2018,
    "source": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
    "prettier/prettier": "error"
  },
  "settings": {
    "react": {
      "version": "16.0"
    }
  }
}
